<div class="d-flex bd-highlight justify-content-center">
  <div class="p-2 flex-fill"></div>
  <div class="p-2 flex-fill">
    <div class="card px-4 py-3 bg-light mb-5">
      <%= form_with model: @car, local: true do |form| %>
        <% if @car.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@car.errors.count, "error") %> stopped
              this car from being saved:
            </h2>
            <ul>
              <% @car.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :price %>
          <%= form.text_field :price, class: "form-control" %>
        </div>

        <div class="form-check">
          <div class="form-group">
            <%= form.radio_button :new, 'true', :checked => true, class: "form-check-input" %>
            <%= label :new, 'New Car', class: "form-check-label" %>
          </div>
        </div>

        <div class="form-check">
          <div class="form-group">
            <%= form.radio_button :new, 'false', class: "form-check-input" %>
            <%= label :new, 'Used Car', class: "form-check-label" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :year %>
          <%= form.text_field :year, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :maker %>
          <%= form.text_field :maker, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :color %>
          <%= form.text_field :color, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :model %>
          <%= form.text_field :model, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :mileage %>
          <%= form.text_field :mileage, class: "form-control" %>
        </div>

        <%= form.submit "submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="p-2 flex-fill bd-highlight"></div>
</div>
