<h1>Listing Cars</h1>
<%= link_to 'New Car', new_car_path %>
<table>
  <tr>
    <th>Price</th>
    <th>New</th>
    <th>Year</th>
    <th>Maker</th>
    <th>Color</th>
    <th>Model</th>
    <th>Mileage</th>
    <th colspan="3"></th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.price %></td>
      <td><%= car.new %></td>
      <td><%= car.year %></td>
      <td><%= car.maker %></td>
      <td><%= car.color %></td>
      <td><%= car.model %></td>
      <td><%= car.mileage %></td>
      <td><%= link_to 'Show', car_path(car) %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
      <td><%= link_to 'Destroy', car_path(car),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
