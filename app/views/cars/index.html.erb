<%= render 'shared/nav-top' %>

<div class="mx-5 mt-5">
  <h2>All Cars</h2>
  <%= link_to 'New Car', new_car_path, class: "btn btn-success mb-3 mr-3 mt-3" %>
  <%= link_to 'Search for Car', cars_search_path, class: "btn btn-info mb-3 mt-3" %>
</div>

<div class="mx-5">
  <table class="table mb-10">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Price</th>
        <th>New</th>
        <th>Year</th>
        <th>Maker</th>
        <th>Color</th>
        <th>Model</th>
        <th>Mileage</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @cars.each do |car| %>
      <tbody>
        <tr>
          <td><%= car.id %></td>
          <td><%= number_to_currency(car.price) %></td>
          <td><%= car.new %></td>
          <td><%= car.year %></td>
          <td><%= car.maker %></td>
          <td><%= car.color %></td>
          <td><%= car.model %></td>
          <td><%= number_with_delimiter(car.mileage) %></td>
          <td><%= link_to 'Show', car_path(car), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-success btn-sm" %></td>
          <td><%= link_to 'Destroy', car_path(car), method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <tbody>
    <% end %>
  </table>
</div>

<%= render 'shared/nav-bottom' %>
