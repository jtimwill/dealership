<%= render 'shared/nav-top' %>
<% if flash[:danger] %>
  <div class="alert alert-danger"><%= flash[:danger] %></div>
<% end %>

<div class="mx-5 mt-4">
  <h2 class="text-center">Login</h2>
  <div class="d-flex bd-highlight justify-content-center">
    <div class="p-2 flex-fill"></div>
    <div class="p-2 flex-fill">
      <div class="card px-4 py-3 bg-light mb-5">
        <%= form_with(url: "/login", method: "post", do %>
          <div class="form-group">
            <%= label_tag(:username, "Username") %>
            <%= text_field_tag(:username, nil, class: "form-control") %>
          </div>
          <div class="form-group">
            <%= label_tag(:password, "Password") %>
            <%= password_field_tag(:password, nil, class: "form-control") %>
          </div>
          <%= submit_tag("Submit", class: "btn btn-primary") %>
        <% end %>
      </div>
    </div>
    <div class="p-2 flex-fill bd-highlight"></div>
  </div>
</div>

<%= render 'shared/nav-bottom' %>
